    },
    "item": [
        {
            "name": "Home",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        ""
                    ]
                }
            }
        },
        {
            "name": "Config",
            "item": [
                {
                    "name": "Get All Configs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/config",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "config"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Config by var_conf",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/config/{{var_conf}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
