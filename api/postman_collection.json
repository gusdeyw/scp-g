            "item": [
                {
                    "name": "Generate Go Project",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/generate_go",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "generate_go"
                            ]
                        },
                        "description": "Generates a complete Go project with Fiber framework based on defined models and model details. Returns a ZIP file containing the generated code."
